{
  "name": "api",
  "version": "1.0.0",
  "description": "Fastify API with TypeScript and TypeORM",
  "main": "dist/server.js",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc && tsc-alias",
    "start": "node dist/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist",
    "typeorm": "typeorm-ts-node-commonjs",
    "migration:generate": "pnpm run typeorm migration:generate -d src/config/data-source.ts",
    "migration:run": "pnpm run typeorm migration:run -d src/config/data-source.ts",
    "migration:revert": "pnpm run typeorm migration:revert -d src/config/data-source.ts",
    "schema:sync": "pnpm run typeorm schema:sync -- -d src/config/data-source.ts",
    "seed": "tsx src/scripts/seed.ts",
    "docker:build": "docker build -t fastify-app .",
    "docker:dev": "docker-compose up",
    "docker:prod": "docker-compose -f docker-compose.prod.yml up"
  },
  "dependencies": {
    "@fastify/cookie": "^11.0.2",
    "@fastify/cors": "^11.1.0",
    "@fastify/helmet": "^13.0.1",
    "@fastify/jwt": "^10.0.0",
    "@fastify/rate-limit": "^10.3.0",
    "@fastify/swagger": "^9.5.1",
    "@fastify/swagger-ui": "^5.2.3",
    "@repo/shared": "workspace:*",
    "bcryptjs": "2.4.3",
    "class-transformer": "^0.5.1",
    "dotenv": "16.4.0",
    "fastify": "^5.5.0",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.16.3",
    "pino": "8.16.2",
    "pino-pretty": "10.2.3",
    "reflect-metadata": "^0.1.14",
    "typeorm": "^0.3.26",
    "zod": "3.22.4"
  },
  "devDependencies": {
    "@types/bcryptjs": "2.4.6",
    "@types/jest": "29.5.8",
    "@types/jsonwebtoken": "^8.5.9",
    "@types/node": "20.12.12",
    "@typescript-eslint/eslint-plugin": "6.11.0",
    "@typescript-eslint/parser": "6.11.0",
    "eslint": "8.57.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "jest": "29.7.0",
    "prettier": "^3.6.2",
    "ts-jest": "29.1.1",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.8",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.20.5",
    "typescript": "5.4.5"
  },
  "keywords": [
    "fastify",
    "typescript",
    "typeorm",
    "postgresql",
    "api"
  ],
  "author": "Kiet Nguyen",
  "license": "MIT"
}
